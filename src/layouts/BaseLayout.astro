---
import { SEO } from "astro-seo";
import "../styles/global.css";

import Footer from "../components/Footer.astro";
import { Schema } from "astro-seo-schema";
import Wangambang from "../components/wangambang.astro";
import SpeedInsights from "@vercel/speed-insights/astro";

// Mengambil props titlemeta dan descriptionmeta dari halaman
const {
  titlemeta = "Al Fayzoud - Vente de Bois de Oud (Gahru) Authentique au Maroc",
  descriptionmeta = "Découvrez Al Fayzoud, votre fournisseur de bois de Oud (Gahru) authentique et de haute qualité au Maroc. Parfait pour les parfums et l'encens, idéal pour les amateurs de luxe. Commandez maintenant pour une livraison rapide au Maroc.",
  imagecover = "/favicon.png", // Set default image jika tidak ada gambar
} = Astro.props;

const siteURL = new URL("https://alfayzoud.web.id/"); // Ganti dengan URL situs Anda
const imageURL = new URL(imagecover, siteURL); // Properti gambar OpenGraph menggunakan URL yang valid
const twitterHandle = "@alfayzOud"; // Ganti dengan username Twitter Anda
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO optimization menggunakan astro-seo -->
    <SEO
      title={titlemeta}
      description={descriptionmeta}
      canonical={siteURL.href}
      openGraph={{
        basic: {
          title: titlemeta,
          type: "website",
          image: imageURL.href, // Gunakan URL gambar yang telah diproses
          url: siteURL.href,
        },
        image: {
          url: imageURL.href, // URL gambar default atau custom
          alt: "alfayzOud OpenGraph Image", // Alt text gambar
          width: 1200, // Lebar gambar OG
          height: 630, // Tinggi gambar OG
        },
      }}
      twitter={{
        card: "summary_large_image", // Menggunakan gambar besar untuk Twitter Card
        creator: twitterHandle,
        image: imageURL.href, // URL gambar default atau custom
      }}
      extend={{
        // Menambahkan favicon
        link: [{ rel: "icon", href: "/favicon.png", type: "image/png" }],
        // Menambahkan meta tambahan
        meta: [
          { name: "author", content: "alfayzOud" },
          {
            name: "keywords",
            content:
              "AlFayzOud, عود فاخر المغرب, Acheter Oud Maroc, شراء عود أصلي, أفضل أنواع العود, Parfum Oud Maroc, عطر العود المغربي, Essence d'Oud Naturel, بخور العود الطبيعي,Bois de Gaharu, عود طبيعي للبيع, Acheter Gaharu Naturel, عود فاخر في الدار البيضاء,عود فاخر في الرباط, Oud Premium Maroc, Oud Rabat, عطر فاخر للزفاف, Oud Marrakech,Vente Bois de Gaharu, Encens Oud, Oud Tanger, Oud Casablanca, Acheter Essence d'Oud",
          },
          { name: "robots", content: "index, follow" }, // Memberikan izin mesin pencari untuk mengindeks halaman
          { name: "twitter:site", content: twitterHandle },
          { name: "twitter:image", content: new URL(imageURL, siteURL).href }, // Menggunakan URL objek yang valid untuk Twitter
        ],
      }}
    />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/favicon.png" type="image/png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!--Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-RVCKB182YN"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-RVCKB182YN");
    </script>

    <Schema
      item={{
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        name: "alfayzOud",
        description:
          "Découvrez Al Fayzoud, votre fournisseur de bois de Oud (Gahru) authentique et de haute qualité au Maroc. Parfait pour les parfums et l'encens, idéal pour les amateurs de luxe. Commandez maintenant pour une livraison rapide au Maroc.",
        url: "https://alfayzoud.web.id",
        telephone: "+212716164271",
        image: "https://alfayzoud.web.id/favicon.png",
        priceRange: "MAD",
        address: {
          "@type": "PostalAddress",
          streetAddress: "13 Rue Mohamed Ibn Ishaq (Avenue Ahmed Balafrej)",
          addressLocality: "Rabat",
          addressRegion: "Maroko",
          addressCountry: "MA",
        },
        sameAs: [
          "https://www.facebook.com/profile.php?id=61568214278176",
          "https://www.instagram.com/alfayz.oud/",
        ],
      }}
    />
  </head>

  <body>
    <!-- Slot konten utama -->
    <main class="mx-auto scroll-smooth">
      <slot />
    </main>
    <Footer />
    <SpeedInsights />
  </body>
</html>
